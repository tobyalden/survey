<h3>You are taking survey: <%= @survey.name() %></h3>

<% @survey.question().each() do |question| %>
  <%= question.description() %>
  <form>
    <ol>
    <% question.answer().each() do |answer| %>
      <!-- Hello World! -->
      <li><input type="radio" name="answer_radio" value="<%=answer.id%>" checked><%=answer.description%></li>
    <% end %>
    </ol>
  </form>
<% end %>

<form action="/submit_survey" method="get">
  <button id="submit_survey" class="btn btn-success">Submit Survey</button>
</form>

<form>
  <br>
    <div class="form-group">
      <a href="/survey/<%= @survey.id %>" id="<%= @survey.id %>" class="btn btn-info" role="button"> Back </a>
    </div>
</form>
